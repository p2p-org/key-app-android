<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contentView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lime">

    <ImageView
        android:id="@+id/onboardingContinueImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:adjustViewBounds="true"
        android:importantForAccessibility="no"
        android:src="@drawable/continue_image"
        app:layout_constraintBottom_toTopOf="@+id/onboardingContinueTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/onboardingContinueTitle"
        style="@style/UiKit.TextAppearance.SemiBold.LargeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="26dp"
        android:gravity="center"
        android:text="@string/onboarding_continue_title"
        android:textColor="@color/night"
        app:layout_constraintBottom_toTopOf="@+id/onboardingContinueText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/onboardingContinueImage" />

    <TextView
        android:id="@+id/onboardingContinueText"
        style="@style/UiKit.TextAppearance.Regular.Title3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textColor="@color/night"
        app:layout_constraintBottom_toTopOf="@+id/onboardingContinueBottomContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/onboardingContinueTitle"
        tools:text="@string/onboarding_continue_subtitle" />

    <LinearLayout
        android:id="@+id/onboardingContinueBottomContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_night_top_rounded"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <org.p2p.uikit.components.UiKitButton
            android:id="@+id/onboardingContinueButton"
            style="@style/UiKit.Components.Button.Large"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ui_kit_button_large_height"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/snow"
            android:text="@string/onboarding_continue_button_text"
            android:textColor="@color/night"
            app:iconTint="@color/night" />

        <org.p2p.uikit.components.UiKitButton
            android:id="@+id/onboardingContinueStartingButton"
            style="@style/UiKit.Components.Button.Large.Text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ui_kit_button_large_height"
            android:layout_marginBottom="20dp"
            android:text="@string/onboarding_continue_starting_button_text"
            android:textColor="@color/lime" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
