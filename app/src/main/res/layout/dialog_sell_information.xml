<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/viewSellViewPointer"
        android:layout_width="32dp"
        android:layout_height="4dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/shape_bottomsheet_pointer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewSellClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewSellViewPointer"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewSellMoonPayLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_moonpay_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewSellClose" />

    <TextView
        android:id="@+id/textViewSellNextStep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/sell_inform_dialog_next_step"
        android:textAppearance="@style/UiKit.TextAppearance.SemiBold.Title3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewSellMoonPayLogo" />

    <View
        android:id="@+id/viewSellTextBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/shape_bottomsheet_pointer"
        android:backgroundTint="@color/smoke"
        app:layout_constraintBottom_toTopOf="@+id/checkBoxSellNotShow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSellNextStep" />


    <TextView
        android:id="@+id/textViewSellFirstStep"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/bg_circle"
        android:backgroundTint="@color/night"
        android:gravity="center"
        android:text="@string/sell_inform_dialog_first_step"
        android:textAlignment="center"
        android:textAppearance="@style/UiKit.TextAppearance.SemiBold.Label1"
        android:textColor="@color/text_snow"
        app:layout_constraintStart_toStartOf="@+id/viewSellTextBackground"
        app:layout_constraintTop_toTopOf="@+id/textViewSellFirstTitle" />

    <TextView
        android:id="@+id/textViewSellFirstTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="12dp"
        android:text="@string/sell_inform_dialog_first_title"
        android:textAppearance="@style/UiKit.TextAppearance.Regular.Text1"
        app:layout_constraintBottom_toTopOf="@+id/textViewSellFirstSubtitle"
        app:layout_constraintEnd_toEndOf="@+id/viewSellTextBackground"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textViewSellFirstStep"
        app:layout_constraintTop_toBottomOf="@+id/textViewSellNextStep" />

    <TextView
        android:id="@+id/textViewSellFirstSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="12dp"
        android:text="@string/sell_inform_dialog_first_subtitle"
        android:textAppearance="@style/UiKit.TextAppearance.Regular.Text4"
        android:textColor="@color/mountain"
        app:layout_constraintBottom_toTopOf="@+id/textViewSellSecondTitle"
        app:layout_constraintEnd_toEndOf="@+id/viewSellTextBackground"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/textViewSellFirstTitle"
        app:layout_constraintTop_toBottomOf="@+id/textViewSellFirstTitle" />

    <TextView
        android:id="@+id/textViewSellSecondStep"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/bg_ring"
        android:backgroundTint="@color/mountain"
        android:gravity="center"
        android:text="@string/sell_inform_dialog_second_step"
        android:textAlignment="center"
        android:textAppearance="@style/UiKit.TextAppearance.SemiBold.Label1"
        app:layout_constraintStart_toStartOf="@+id/viewSellTextBackground"
        app:layout_constraintTop_toTopOf="@+id/textViewSellSecondTitle" />

    <View
        android:id="@+id/viewSellLine"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginVertical="1dp"
        android:background="@color/mountain"
        app:layout_constraintBottom_toTopOf="@+id/textViewSellSecondStep"
        app:layout_constraintEnd_toEndOf="@+id/textViewSellFirstStep"
        app:layout_constraintStart_toStartOf="@+id/textViewSellFirstStep"
        app:layout_constraintTop_toBottomOf="@+id/textViewSellFirstStep" />

    <TextView
        android:id="@+id/textViewSellSecondTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:text="@string/sell_inform_dialog_second_title"
        android:textAppearance="@style/UiKit.TextAppearance.Regular.Text1"
        app:layout_constraintBottom_toTopOf="@+id/textViewSellSecondSubtitle"
        app:layout_constraintEnd_toEndOf="@+id/viewSellTextBackground"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textViewSellSecondStep"
        app:layout_constraintTop_toBottomOf="@+id/textViewSellFirstSubtitle" />

    <TextView
        android:id="@+id/textViewSellSecondSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="28dp"
        android:text="@string/sell_inform_dialog_second_subtitle"
        android:textAppearance="@style/UiKit.TextAppearance.Regular.Text4"
        android:textColor="@color/mountain"
        app:layout_constraintBottom_toTopOf="@+id/checkBoxSellNotShow"
        app:layout_constraintEnd_toEndOf="@+id/viewSellTextBackground"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/textViewSellSecondTitle"
        app:layout_constraintTop_toBottomOf="@+id/textViewSellSecondTitle" />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/checkBoxSellNotShow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginBottom="20dp"
        android:minHeight="48dp"
        android:text="@string/sell_inform_dialog_do_not_show"
        android:textAppearance="@style/UiKit.TextAppearance.Regular.Text3"
        android:textColor="@color/text_night"
        app:buttonTint="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/buttonSellConfirm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <org.p2p.uikit.components.UiKitButton
        android:id="@+id/buttonSellConfirm"
        style="@style/UiKit.Components.Button.Large"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/sell_inform_dialog_confirm_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>