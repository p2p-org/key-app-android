<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/night"
        android:paddingBottom="24dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_balance"
        android:textAppearance="@style/UiKit.TextAppearance.SemiBold.Text1"
        android:textColor="@color/text_mountain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progress_bar" />

    <TextView
        android:id="@+id/text_view_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textAppearance="@style/UiKit.TextAppearance.SemiBold.LargeTitle"
        android:textColor="@color/text_night"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_title"
        tools:text="$ 1 000.97" />

    <org.p2p.uikit.atoms.UiKitSkeletonRectangle
        android:id="@+id/skeleton_amount"
        android:layout_width="108dp"
        android:layout_height="12dp"
        android:layout_marginTop="24dp"
        android:visibility="gone"
        app:isRounded="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_title" />

    <include
        android:id="@+id/action_buy_view"
        layout="@layout/item_main_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toStartOf="@+id/action_receive_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_amount"
        app:layout_constraintVertical_chainStyle="packed" />

    <include
        android:id="@+id/action_receive_view"
        layout="@layout/item_main_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toStartOf="@+id/action_send_view"
        app:layout_constraintStart_toEndOf="@+id/action_buy_view"
        app:layout_constraintTop_toBottomOf="@+id/text_view_amount" />

    <include
        android:id="@+id/action_send_view"
        layout="@layout/item_main_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toStartOf="@+id/action_trade_view"
        app:layout_constraintStart_toEndOf="@+id/action_receive_view"
        app:layout_constraintTop_toBottomOf="@+id/text_view_amount" />

    <include
        android:id="@+id/action_trade_view"
        layout="@layout/item_main_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/action_send_view"
        app:layout_constraintTop_toBottomOf="@+id/text_view_amount" />

</androidx.constraintlayout.widget.ConstraintLayout>
