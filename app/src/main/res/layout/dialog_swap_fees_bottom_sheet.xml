<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_alert_elevation_rounded_top"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingVertical="16dp"
        android:text="@string/swap_fees"
        android:textAppearance="@style/WalletTheme.TextAppearance.SemiBold16" />

    <View
        android:id="@+id/dividerView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/strokeSecondary" />

    <org.p2p.wallet.common.ui.widget.DoubleTextView
        android:id="@+id/liquidityFeeView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:layout_marginStart="20dp"
        app:topText="@string/swap_liquidity_provider_fees"
        tools:bottomText="0.00235 USDT" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/strokeSecondary" />

    <org.p2p.wallet.common.ui.widget.DoubleTextView
        android:id="@+id/networkFeeView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:layout_marginStart="20dp"
        app:topText="@string/swap_network_fee"
        tools:bottomText="0.00005 SOL" />

</LinearLayout>