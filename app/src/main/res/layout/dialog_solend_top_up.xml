<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@drawable/bg_rounded"
    android:backgroundTint="@color/backgroundPrimary">

    <View
        android:id="@+id/viewPointer"
        android:layout_width="32dp"
        android:layout_height="4dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/shape_bottomsheet_pointer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewTitle"
        style="@style/UiKit.TextAppearance.SemiBold.Title3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:layout_marginStart="16dp"
        android:gravity="center_vertical"
        android:text="@string/solend_top_up_title"
        android:textColor="@color/text_night"
        app:layout_constraintEnd_toStartOf="@+id/imageViewClose"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewPointer" />

    <ImageView
        android:id="@+id/imageViewClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackgroundBorderless"
        android:padding="16dp"
        android:src="@drawable/ic_close"
        app:layout_constraintBottom_toBottomOf="@id/textViewTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/textViewTitle"
        app:tint="@color/textIconPrimary"
        tools:ignore="ContentDescription" />

    <org.p2p.uikit.atoms.UiKitRoundedImageView
        android:id="@+id/tokenImageView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        app:cornerRadius="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewTitle"
        tools:src="@tools:sample/avatars" />

    <org.p2p.uikit.atoms.UiKitStartAmountView
        android:id="@+id/startAmountView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="@id/tokenImageView"
        app:layout_constraintStart_toEndOf="@id/tokenImageView"
        app:layout_constraintTop_toTopOf="@id/tokenImageView"
        tools:subtitle="USD Coin"
        tools:title="0 USDC" />

    <org.p2p.uikit.atoms.UiKitEndAmountView
        android:id="@+id/endAmountView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="@id/tokenImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/startAmountView"
        app:layout_constraintTop_toTopOf="@id/tokenImageView"
        app:tokenAmount="@string/solend_top_up_apy_title"
        tools:usdAmount="2.21%" />

    <org.p2p.uikit.components.UiKitButton
        android:id="@+id/buttonBuy"
        style="@style/UiKit.Components.Button.Large"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ui_kit_button_large_height"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/bg_night"
        android:text="@string/solend_top_up_buy_button"
        android:textColor="@color/text_lime"
        app:layout_constraintTop_toBottomOf="@id/tokenImageView" />

    <org.p2p.uikit.components.UiKitButton
        android:id="@+id/buttonReceive"
        style="@style/UiKit.Components.Button.Medium.Outlined"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ui_kit_button_large_height"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="14dp"
        android:text="@string/solend_top_up_receive_button"
        android:textColor="@color/text_night"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonBuy" />

</androidx.constraintlayout.widget.ConstraintLayout>
