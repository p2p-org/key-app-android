<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_cloud">

        <org.p2p.uikit.atoms.UiKitRoundedImageView
            android:id="@+id/tokenImageView"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            app:cornerRadius="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginStart="24dp"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/textViewTokenAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:textAppearance="@style/UiKit.TextAppearance.Regular.Text2"
            app:layout_constraintBottom_toTopOf="@+id/textViewApy"
            app:layout_constraintEnd_toStartOf="@+id/textViewAmountUsd"
            app:layout_constraintStart_toEndOf="@id/tokenImageView"
            app:layout_constraintTop_toTopOf="@id/tokenImageView"
            tools:text="3 096.19 USDT" />

        <TextView
            android:id="@+id/textViewApy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="2dp"
            android:textAppearance="@style/UiKit.TextAppearance.Regular.Label1"
            android:textColor="@color/text_mountain"
            app:layout_constraintBottom_toBottomOf="@id/tokenImageView"
            app:layout_constraintEnd_toStartOf="@+id/textViewAmountUsd"
            app:layout_constraintStart_toEndOf="@id/tokenImageView"
            app:layout_constraintTop_toBottomOf="@id/textViewTokenAmount"
            tools:text="Yielding 2.21% APY" />

        <TextView
            android:id="@+id/textViewAmountUsd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="24dp"
            android:textAppearance="@style/UiKit.TextAppearance.SemiBold.Text2"
            app:layout_constraintBottom_toBottomOf="@id/tokenImageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tokenImageView"
            tools:text="$4 971.77" />

        <org.p2p.uikit.components.UiKitButton
            android:id="@+id/buttonAddMore"
            style="@style/UiKit.Components.Button.Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/bg_rain"
            android:text="@string/solend_deposits_add_more"
            android:textColor="@color/text_night"
            app:iconGravity="end"
            app:iconTint="@color/icons_night"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/buttonWithdraw"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tokenImageView" />

        <org.p2p.uikit.components.UiKitButton
            android:id="@+id/buttonWithdraw"
            style="@style/UiKit.Components.Button.Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/bg_rain"
            android:text="@string/solend_deposits_withdraw"
            android:textColor="@color/text_night"
            app:iconGravity="end"
            app:iconTint="@color/icons_night"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/buttonAddMore"
            app:layout_constraintTop_toBottomOf="@id/tokenImageView" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>