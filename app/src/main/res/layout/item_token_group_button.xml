<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    tools:ignore="UseCompoundDrawables">

    <ImageView
        android:id="@+id/imageViewTokenState"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_token_expose"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:gravity="center_vertical"
        android:text="@string/main_hidden_tokens"
        android:textAppearance="@style/UiKit.TextAppearance.Regular.Text2"
        android:textColor="@color/text_mountain" />

</LinearLayout>
