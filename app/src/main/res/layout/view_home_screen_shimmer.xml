<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    app:shimmer_auto_start="true"
    app:shimmer_base_alpha="1"
    app:shimmer_highlight_alpha="0"
    app:shimmer_highlight_color="@color/bg_snow"
    app:shimmer_base_color="@color/bg_snow">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@color/bg_snow">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/viewUsername"
            android:layout_width="164dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_lime_rounded_28"
            android:backgroundTint="@color/bg_rain"
            android:paddingHorizontal="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:id="@+id/viewLeft"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/bg_rounded_rain_4"
                android:backgroundTint="@color/bg_snow"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/viewRight"
                android:layout_width="106dp"
                android:layout_height="16dp"
                android:layout_marginStart="12dp"
                android:background="@drawable/bg_rounded_rain_4"
                android:backgroundTint="@color/bg_snow"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/viewLeft"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/viewActionButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/bg_smoke"
            android:paddingVertical="24dp"
            app:layout_constraintTop_toBottomOf="@id/viewUsername">

            <View
                android:id="@+id/viewBalance"
                android:layout_width="200dp"
                android:layout_height="32dp"
                android:background="@drawable/bg_rounded_rain_8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/viewFiat"
                android:layout_width="128dp"
                android:layout_height="32dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_rounded_rain_8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/viewBalance" />

            <LinearLayout
                android:id="@+id/viewButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="horizontal"
                android:paddingHorizontal="24dp"
                app:layout_constraintTop_toBottomOf="@id/viewFiat">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <View
                        android:layout_width="52dp"
                        android:layout_height="44dp"
                        android:background="@drawable/bg_rounded_rain_8" />

                    <View
                        android:layout_width="52dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/bg_rounded_rain_8" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <View
                        android:layout_width="52dp"
                        android:layout_height="44dp"
                        android:background="@drawable/bg_rounded_rain_8" />

                    <View
                        android:layout_width="52dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/bg_rounded_rain_8" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <View
                        android:layout_width="52dp"
                        android:layout_height="44dp"
                        android:background="@drawable/bg_rounded_rain_8" />

                    <View
                        android:layout_width="52dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/bg_rounded_rain_8" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <View
                        android:layout_width="52dp"
                        android:layout_height="44dp"
                        android:background="@drawable/bg_rounded_rain_8" />

                    <View
                        android:layout_width="52dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/bg_rounded_rain_8" />

                </LinearLayout>

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <View
                android:layout_width="128dp"
                android:layout_height="28dp"
                android:background="@drawable/bg_snow_rounded_16"
                android:backgroundTint="@color/bg_rain"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <View
                    android:id="@+id/viewTokenIcon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_circle"
                    android:backgroundTint="@color/bg_rain"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:layout_width="108dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_snow_rounded_16"
                    android:backgroundTint="@color/bg_rain"
                    app:layout_constraintStart_toEndOf="@id/viewTokenIcon"
                    app:layout_constraintTop_toTopOf="@id/viewTokenIcon" />

                <View
                    android:layout_width="108dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="28dp"
                    android:background="@drawable/bg_snow_rounded_16"
                    android:backgroundTint="@color/bg_rain"                    app:layout_constraintStart_toEndOf="@id/viewTokenIcon"
                    app:layout_constraintTop_toTopOf="@id/viewTokenIcon" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <View
                    android:id="@+id/viewTokenIcon1"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_circle"
                    android:backgroundTint="@color/bg_rain"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:layout_width="108dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_snow_rounded_16"
                    android:backgroundTint="@color/bg_rain"
                    app:layout_constraintStart_toEndOf="@id/viewTokenIcon1"
                    app:layout_constraintTop_toTopOf="@id/viewTokenIcon1" />

                <View
                    android:layout_width="108dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="28dp"
                    android:background="@drawable/bg_snow_rounded_16"
                    android:backgroundTint="@color/bg_rain"
                    app:layout_constraintStart_toEndOf="@id/viewTokenIcon1"
                    app:layout_constraintTop_toTopOf="@id/viewTokenIcon1" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <View
                    android:id="@+id/viewTokenIcon2"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_circle"
                    android:backgroundTint="@color/bg_rain"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:layout_width="108dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_snow_rounded_16"
                    android:backgroundTint="@color/bg_rain"
                    app:layout_constraintStart_toEndOf="@id/viewTokenIcon2"
                    app:layout_constraintTop_toTopOf="@id/viewTokenIcon2" />

                <View
                    android:layout_width="108dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="28dp"
                    android:background="@drawable/bg_snow_rounded_16"
                    android:backgroundTint="@color/bg_rain"
                    app:layout_constraintStart_toEndOf="@id/viewTokenIcon2"
                    app:layout_constraintTop_toTopOf="@id/viewTokenIcon2" />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>
    </LinearLayout>


</com.facebook.shimmer.ShimmerFrameLayout>