<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:background="@color/backgroundPrimary"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageViewTransactionStatusIcon"
        android:layout_width="@dimen/history_transaction_image_size"
        android:layout_height="@dimen/history_transaction_image_size"
        android:layout_marginVertical="12dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/bg_rounded_solid_rose20_24"
        android:padding="12dp"
        app:srcCompat="@drawable/ic_alert_rounded"
        app:tint="@color/icons_rose" />

    <include
        android:id="@+id/layoutTransactionDetails"
        layout="@layout/item_transaction_base_part"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

</LinearLayout>
