<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_smoke">

    <org.p2p.uikit.organisms.UiKitToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_snow"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_toolbar_back"
        app:title="@string/sell_payload_title" />

    <TextView
        android:id="@+id/textViewSell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="@string/common_cash_out"
        app:layout_constraintBottom_toTopOf="@id/editTextToken"
        app:layout_constraintStart_toStartOf="@id/editTextToken" />

    <TextView
        android:id="@+id/textViewSellAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:textAppearance="@style/UiKit.TextAppearance.Regular.Label1"
        android:textColor="@color/text_sky"
        app:layout_constraintBottom_toBottomOf="@id/textViewSell"
        app:layout_constraintStart_toEndOf="@id/textViewSell"
        app:layout_constraintTop_toTopOf="@id/textViewSell"
        tools:text="all 4.53 SOL" />


    <org.p2p.uikit.components.UiKitEditText
        android:id="@+id/editTextInputToken"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <org.p2p.uikit.components.UiKitEditText
        android:id="@+id/editTextAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:textAppearance="@style/UiKit.TextAppearance.SemiBold.Title1"
        app:layout_constraintTop_toBottomOf="@id/editTextInputToken" />

    <TextView
        android:id="@+id/textViewRate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_app_top_rounded"
        android:padding="16dp"
        android:textAppearance="@style/UiKit.TextAppearance.Regular.Label1"
        android:textColor="@color/text_mountain"
        app:layout_constraintTop_toBottomOf="@id/editTextAmount"
        tools:text="1 SOL â‰ˆ 34.65 EUR" />

    <TextView
        android:id="@+id/textViewFee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/bg_app_bottom_rounded"
        android:padding="16dp"
        android:textAppearance="@style/UiKit.TextAppearance.Regular.Label1"
        android:textColor="@color/text_mountain"
        app:layout_constraintTop_toBottomOf="@id/textViewRate"
        tools:text="Included fee 0.6 SOL" />

    <org.p2p.uikit.components.UiKitButton
        android:id="@+id/buttonSend"
        style="@style/UiKit.Components.Button.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/common_cash_out"
        app:layout_constraintBottom_toBottomOf="parent" />

    <FrameLayout
        android:id="@+id/shimmerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?actionBarSize"
        android:background="@color/bg_smoke">

        <include layout="@layout/view_sell_shimmer" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>