<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_app_top_rounded"
    android:backgroundTint="@color/bg_snow"
    android:paddingBottom="32dp">

    <View
        android:id="@+id/topView"
        android:layout_width="32dp"
        android:layout_height="4dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/bg_rounded_stroke"
        android:backgroundTint="@color/bg_smoke"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="@string/sell_lock_title"
        android:textAppearance="@style/UiKit.TextAppearance.SemiBold.Title2"
        app:layout_constraintTop_toBottomOf="@id/topView" />

    <TextView
        android:id="@+id/texViewSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textAppearance="@style/UiKit.TextAppearance.Regular.Text3"
        android:textColor="@color/text_mountain"
        app:layout_constraintEnd_toEndOf="@id/textViewTitle"
        app:layout_constraintStart_toStartOf="@id/textViewTitle"
        app:layout_constraintTop_toBottomOf="@id/textViewTitle"
        tools:text="Today @ 15:26" />

    <LinearLayout
        android:id="@+id/tokenView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/bg_smoke"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingVertical="24dp"
        app:layout_constraintTop_toBottomOf="@id/texViewSubtitle">

        <ImageView
            android:id="@+id/imageViewToken"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_sol"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewTitle" />


        <TextView
            android:id="@+id/textViewAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="@string/sell_lock_title"
            android:textAppearance="@style/UiKit.TextAppearance.SemiBold.LargeTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageViewToken"
            tools:text="6 SOL" />

        <TextView
            android:id="@+id/textViewUsdValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/UiKit.TextAppearance.Regular.Text2"
            android:textColor="@color/text_mountain"
            app:layout_constraintEnd_toEndOf="@id/textViewAmount"
            app:layout_constraintStart_toStartOf="@id/textViewAmount"
            app:layout_constraintTop_toBottomOf="@id/textViewAmount"
            tools:text="â‰ˆ $1930" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/viewMessageContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_rounded_transparent_12"
        android:backgroundTint="@color/bg_rain"
        android:orientation="horizontal"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/tokenView">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_alert"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewTitle"
            app:tint="@color/icons_silver" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:gravity="start"
            android:text="@string/sell_process_transaction_status"
            android:textAppearance="@style/UiKit.TextAppearance.Regular.Text3"
            app:layout_constraintTop_toBottomOf="@id/imageViewToken" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/viewReceiverContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/bg_rounded_transparent_12"
        android:backgroundTint="@color/bg_snow"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/viewMessageContainer">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_send_to"
            android:textAppearance="@style/UiKit.TextAppearance.Regular.Text3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/you_bank_account_via_moonpay"
            android:textAppearance="@style/UiKit.TextAppearance.SemiBold.Text4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <org.p2p.uikit.components.UiKitButton
        android:id="@+id/buttonSend"
        style="@style/UiKit.Components.Button.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/intercom_close"
        app:layout_constraintTop_toBottomOf="@id/viewReceiverContainer" />

    <org.p2p.uikit.components.UiKitButton
        android:id="@+id/buttonRemove"
        style="@style/UiKit.Components.Button.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/sell_lock_button_cancel"
        android:textAppearance="@style/UiKit.TextAppearance.SemiBold.Text2"
        android:textColor="@color/text_night"
        app:backgroundTint="@color/bg_snow"
        app:layout_constraintTop_toBottomOf="@id/buttonSend" />


</androidx.constraintlayout.widget.ConstraintLayout>