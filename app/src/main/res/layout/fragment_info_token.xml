<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <org.p2p.wallet.common.ui.widget.RoundedImageView
                        android:id="@+id/tokenImageView"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:src="@drawable/ic_sol" />

                    <TextView
                        android:id="@+id/totalTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:textAppearance="@style/WalletTheme.TextAppearance.SemiBold18"
                        app:layout_constraintBottom_toTopOf="@id/usdTotalTextView"
                        app:layout_constraintStart_toEndOf="@id/tokenImageView"
                        app:layout_constraintTop_toTopOf="@id/tokenImageView"
                        tools:text="21.9181 SOL" />

                    <TextView
                        android:id="@+id/usdTotalTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="16dp"
                        android:textAppearance="@style/WalletTheme.TextAppearance.SemiBold14"
                        app:layout_constraintBottom_toBottomOf="@id/tokenImageView"
                        app:layout_constraintStart_toEndOf="@id/tokenImageView"
                        app:layout_constraintTop_toBottomOf="@id/totalTextView"
                        tools:text="$ 12,380.00" />

                    <androidx.constraintlayout.widget.Barrier
                        android:id="@+id/totalBarrier"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:barrierDirection="bottom"
                        app:barrierMargin="16dp"
                        app:constraint_referenced_ids="tokenImageView,usdTotalTextView" />

                    <View
                        android:id="@+id/actionView"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:background="?colorAccentTertiary"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/totalBarrier" />

                    <org.p2p.wallet.common.ui.widget.SimpleActionButton
                        android:id="@+id/sendButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:actionButtonText="@string/main_send"
                        app:actionDrawable="@drawable/ic_send_blue"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/receiveButton"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/actionView" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="16dp"
                        android:background="?colorElementSecondary"
                        app:layout_constraintBottom_toBottomOf="@id/sendButton"
                        app:layout_constraintEnd_toStartOf="@id/receiveButton"
                        app:layout_constraintStart_toEndOf="@id/sendButton"
                        app:layout_constraintTop_toTopOf="@id/sendButton" />

                    <org.p2p.wallet.common.ui.widget.SimpleActionButton
                        android:id="@+id/receiveButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:actionButtonText="@string/main_receive"
                        app:actionDrawable="@drawable/ic_receive_blue"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/swapButton"
                        app:layout_constraintStart_toEndOf="@id/sendButton"
                        app:layout_constraintTop_toTopOf="@id/actionView" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="16dp"
                        android:background="?colorElementSecondary"
                        app:layout_constraintBottom_toBottomOf="@id/sendButton"
                        app:layout_constraintEnd_toStartOf="@id/swapButton"
                        app:layout_constraintStart_toEndOf="@id/receiveButton"
                        app:layout_constraintTop_toTopOf="@id/sendButton" />

                    <org.p2p.wallet.common.ui.widget.SimpleActionButton
                        android:id="@+id/swapButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:actionButtonText="@string/main_swap"
                        app:actionDrawable="@drawable/ic_swap_blue"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/receiveButton"
                        app:layout_constraintTop_toTopOf="@id/actionView" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <org.p2p.wallet.common.ui.widget.ProgressButton
                android:id="@+id/showAddressButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="12dp"
                app:buttonBackground="@drawable/bg_blue_stroke_rounded"
                app:buttonDrawable="@drawable/ic_qr"
                app:buttonText="@string/details_show_wallet_address"
                app:buttonTextColor="?colorAccentPrimary" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/periodPriceTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="12dp"
                        android:textAppearance="@style/WalletTheme.TextAppearance.Bold18"
                        tools:text="$ 0.01" />

                    <TextView
                        android:id="@+id/periodPercentTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        android:textAppearance="@style/WalletTheme.TextAppearance.Regular14"
                        android:textColor="?colorElementSecondary"
                        tools:text="11.83%" />

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/lineChart"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:layout_marginTop="4dp" />

                    <org.p2p.wallet.common.ui.widget.TabsView
                        android:id="@+id/tabsView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

    </ScrollView>

    <org.p2p.wallet.common.ui.widget.ProgressView
        android:id="@+id/progressView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />
</FrameLayout>