<com.facebook.shimmer.ShimmerFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:shimmer_auto_start="true"
    android:background="@color/bg_smoke"
    app:shimmer_base_alpha="1"
    app:shimmer_base_color="@color/backgroundAppStroke"
    app:shimmer_highlight_alpha="0"
    app:shimmer_highlight_color="@color/elements_rain"
    tools:visibility="visible">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingVertical="16dp">

        <ImageView
            android:id="@+id/viewTop"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="120dp"
            android:background="@drawable/bg_stroke_rounded"
            android:backgroundTint="@color/elements_rain"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/viewMiddle"
            android:layout_width="match_parent"
            android:layout_height="148dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_stroke_rounded"
            android:backgroundTint="@color/elements_rain"
            app:layout_constraintTop_toBottomOf="@id/viewTop" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="120dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/bg_stroke_rounded"
            android:backgroundTint="@color/elements_rain"
            app:layout_constraintBottom_toBottomOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.facebook.shimmer.ShimmerFrameLayout>
