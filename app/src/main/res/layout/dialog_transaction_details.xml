<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_alert_elevation_rounded_top"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <org.p2p.wallet.common.ui.widget.RoundedImageView
                android:id="@+id/tokenImageView"
                android:layout_width="@dimen/history_transaction_image_size"
                android:layout_height="@dimen/history_transaction_image_size"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_app_stroke_rounded"
                android:padding="12dp"
                android:src="@drawable/ic_transaction_send"
                app:cornerRadius="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!--TODO PWN-3247 switch on specific view to show transaction token(s) ^^-->

            <TextView
                android:id="@+id/amountTextTokenView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="32dp"
                android:gravity="center"
                android:textAppearance="@style/WalletTheme.TextAppearance.Bold16"
                tools:text="0.02113 renBTC" />

            <TextView
                android:id="@+id/amountTextUsdView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:textAppearance="@style/WalletTheme.TextAppearance.Medium20"
                android:textColor="@color/textIconSecondary"
                tools:text="~$989.12" />

            <TextView
                android:id="@+id/dateTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:textAppearance="@style/WalletTheme.TextAppearance.Regular14"
                android:textColor="@color/textIconSecondary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="30.10.2021 12:51" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/transactionIdTitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="8dp"
                    android:text="@string/transaction_details_transaction_id"
                    android:textAppearance="@style/WalletTheme.TextAppearance.Medium16" />

                <TextView
                    android:id="@+id/transactionIdTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:drawablePadding="6dp"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:maxLines="1"
                    android:textAppearance="@style/WalletTheme.TextAppearance.SemiBold16"
                    android:textColor="@color/textIconSecondary"
                    app:drawableEndCompat="@drawable/ic_copy"
                    tools:text="k97y8u209j0...uiei" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sourceTitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="8dp"
                    android:text="@string/transaction_details_from"
                    android:textAppearance="@style/WalletTheme.TextAppearance.Medium16" />

                <TextView
                    android:id="@+id/sourceAddressTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:drawablePadding="6dp"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:maxLines="1"
                    android:textAppearance="@style/WalletTheme.TextAppearance.SemiBold16"
                    android:textColor="@color/textIconSecondary"
                    tools:text="FfRBgsYFtBW7Vo5hRetqEbdxrwU8KNRn1ma6sBTBeJEr" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/destinationTitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="8dp"
                    android:text="@string/transaction_details_to"
                    android:textAppearance="@style/WalletTheme.TextAppearance.Medium16" />

                <TextView
                    android:id="@+id/destinationAddressTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:drawablePadding="6dp"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:maxLines="1"
                    android:textAppearance="@style/WalletTheme.TextAppearance.SemiBold16"
                    android:textColor="@color/textIconSecondary"
                    tools:text="bc1q830ddmnzc2539vmudxz44amm2x84j5yjvc209nrlw5c7s805nusq7k4tyf" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/statusTitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="8dp"
                    android:text="@string/transaction_details_status"
                    android:textAppearance="@style/WalletTheme.TextAppearance.Medium16" />

                <TextView
                    android:id="@+id/statusTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:drawablePadding="6dp"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:maxLines="1"
                    android:textAppearance="@style/WalletTheme.TextAppearance.SemiBold16"
                    android:textColor="@color/colorGreen"
                    tools:text="Completed" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/feesTitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="8dp"
                    android:text="@string/transaction_details_fee"
                    android:textAppearance="@style/WalletTheme.TextAppearance.Medium16" />

                <TextView
                    android:id="@+id/feesTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:drawablePadding="6dp"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:maxLines="1"
                    android:textAppearance="@style/WalletTheme.TextAppearance.SemiBold16"
                    android:textColor="@color/textIconActive"
                    tools:text="Free by p2p.org" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/blockNumberTitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="8dp"
                    android:text="@string/transaction_details_number"
                    android:textAppearance="@style/WalletTheme.TextAppearance.Medium16" />

                <TextView
                    android:id="@+id/blockNumberTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:drawablePadding="6dp"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:maxLines="1"
                    android:textAppearance="@style/WalletTheme.TextAppearance.SemiBold16"
                    android:textColor="@color/textIconSecondary"
                    tools:text="#5387498763" />

            </LinearLayout>

            <org.p2p.wallet.common.ui.widget.ProgressButton
                android:id="@+id/doneButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="20dp"
                android:textAppearance="@style/WalletTheme.TextAppearance.SemiBold16"
                app:buttonDrawableTint="@color/textIconButtonPrimary"
                app:buttonText="@string/transaction_details_done_button"
                app:buttonTextColor="@color/textIconButtonPrimary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/transactionIdTextView" />

            <org.p2p.wallet.common.ui.widget.ProgressButton
                android:id="@+id/detailsButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="20dp"
                android:textAppearance="@style/WalletTheme.TextAppearance.SemiBold16"
                app:buttonBackground="@drawable/bg_blue_stroke_rounded"
                app:buttonText="@string/transaction_details_details_button"
                app:buttonTextColor="@color/textIconActive" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <org.p2p.wallet.common.ui.widget.ProgressView
        android:id="@+id/progressView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</FrameLayout>
