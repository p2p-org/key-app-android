<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="WalletTheme.Dialog.Wide" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppRoundCornersModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_alert_elevation_rounded_top</item>
        <item name="colorMessagePrimary">@color/colorGreen</item>
    </style>

    <style name="WalletTheme.AlertDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="colorAccent">?colorAccentPrimary</item>
        <item name="android:textColorPrimary">?colorElementPrimary</item>
        <item name="android:windowBackground">@drawable/bg_white_rounded</item>
        <item name="android:windowMinWidthMinor">280dp</item>
    </style>

    <style name="SwitchStyle" parent="Theme.Design.BottomSheetDialog">
        <item name="colorControlActivated">?colorAccentPrimary</item>
        <item name="colorSwitchThumbNormal">?colorElementSecondary</item>
        <item name="android:colorForeground">?colorElementSecondary</item>
    </style>
</resources>