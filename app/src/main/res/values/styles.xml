<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="WalletTheme.Dialog.Wide" parent="WalletTheme.AlertDialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppRoundCornersModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_alert_elevation_rounded_top</item>
    </style>

    <style name="WalletTheme.AlertDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="colorAccent">@color/backgroundButtonPrimary</item>
        <item name="android:textColorPrimary">@color/textIconPrimary</item>
        <item name="android:windowBackground">@drawable/bg_white_rounded</item>
        <item name="android:windowMinWidthMinor">280dp</item>
        <item name="titleTextStyle">@style/WalletTheme.TextAppearance.SemiBold16</item>
        <item name="materialAlertDialogBodyTextStyle">@style/WalletTheme.TextAppearance.Regular16</item>
        <item name="materialAlertDialogTitleTextStyle">@style/WalletTheme.TextAppearance.SemiBold16</item>
        <item name="buttonBarPositiveButtonStyle">@style/AccentColoredText</item>
        <item name="buttonBarNegativeButtonStyle">@style/AccentColoredText</item>

    </style>

    <style name="SwitchStyle" parent="Theme.Design.BottomSheetDialog">
        <item name="colorControlActivated">@color/backgroundButtonPrimary</item>
        <item name="colorSwitchThumbNormal">@color/textIconPrimary</item>
        <item name="android:colorForeground">@color/textIconPrimary</item>
    </style>

    <style name="AccentColoredText" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/backgroundButtonPrimary</item>
    </style>

    <declare-styleable name="SwipeRevealLayout">
        <attr name="dragEdge">
            <flag name="left" value="1" />
            <flag name="right" value="2" />
            <flag name="top" value="4" />
            <flag name="bottom" value="8" />
        </attr>

        <attr name="mode">
            <enum name="normal" value="0" />
            <enum name="same_level"   value="1" />
        </attr>

        <attr name="flingVelocity" format="integer" />

        <attr name="minDistRequestDisallowParent" format="dimension" />
    </declare-styleable>

</resources>