<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="NumberKeyboardButtonView">
        <attr name="keyboard_button_text" format="string" />
        <attr name="keyboard_button_image" format="integer" />
    </declare-styleable>

    <declare-styleable name="ShapeImageView">
        <attr name="colorFill" format="color" />
        <attr name="colorStroke" format="color" />
        <attr name="strokeWidth" format="dimension" />
        <attr name="paintStyle" format="enum">
            <enum name="fill" value="0" />
            <enum name="stroke" value="1" />
            <enum name="fillAndStroke" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="EndlessScrollRecyclerView">
        <attr name="emptyLayout" format="reference" />
        <attr name="errorLayout" format="reference" />
        <attr name="progressLayout" format="reference" />
    </declare-styleable>

    <declare-styleable name="SwipeLayout">
        <attr name="swipeDirection" format="integer">
            <flag name="left" value="1" />
            <flag name="right" value="2" />
        </attr>
        <attr name="isEnabledSwipe" format="boolean" />
        <attr name="isFreeDragAfterOpen" format="boolean" />
        <attr name="isFreeHorizontalDrag" format="boolean" />
        <attr name="isContinuousSwipe" format="boolean" />
        <attr name="isTogether" format="boolean" />
        <attr name="rightItem" format="reference" />
        <attr name="leftItem" format="reference" />
        <attr name="draggedItem" format="reference" />
        <attr name="autoMovingSensitivity" format="integer" />
        <attr name="rightDragViewPadding" format="dimension" />
        <attr name="leftDragViewPadding" format="dimension" />
        <attr name="draggedItemCornerRadius" format="dimension" />
        <attr name="draggedItemElevation" format="dimension" />
    </declare-styleable>

    <declare-styleable name="DoubleTextView">
        <attr name="topText" format="string" />
        <attr name="bottomText" format="string" />
        <attr name="drawableEnd" format="reference" />
    </declare-styleable>

    <declare-styleable name="SimpleActionButton">
        <attr name="actionButtonText" format="string" />
        <attr name="actionDrawable" format="reference" />
    </declare-styleable>

    <declare-styleable name="ProgressButton">
        <attr name="buttonText" format="string" />
        <attr name="buttonDrawableStart" format="reference" />
        <attr name="buttonBackground" format="reference" />
        <attr name="buttonDrawableTint" format="reference" />
        <attr name="buttonTextColor" format="color" />
        <attr name="buttonEnabled" format="boolean" />
        <attr name="buttonDrawableEnd" format="reference" />
        <attr name="android:textAppearance" />
    </declare-styleable>

    <declare-styleable name="OptionsTextView">
        <attr name="optionsLabelText" format="string" />
        <attr name="optionsText" format="string" />
        <attr name="optionsValueText" format="string" />
        <attr name="optionsValueTextColor" format="string" />
        <attr name="isBoldValue" format="boolean" />
        <attr name="isBoldLabel" format="boolean" />
    </declare-styleable>

    <declare-styleable name="InputTextView">
        <attr name="suffixText" format="string" />
        <attr name="hint" format="string" />
        <attr name="android:maxLength" />
        <attr name="android:digits" />
    </declare-styleable>

    <declare-styleable name="ActionButtonView">
        <attr name="android:text" />
        <attr name="srcCompat" />
    </declare-styleable>

    <declare-styleable name="ExpandView">
        <attr name="android:text" />
        <attr name="isExpanded" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ShadowView">
        <attr name="radius" format="dimension" />
        <attr name="shadowWidth" format="dimension" />
        <attr name="backgroundColor" format="color" />
        <attr name="shadowColor" format="color" />
    </declare-styleable>

    <declare-styleable name="SwapWidget">
        <attr name="balanceVisible" format="boolean" />
        <attr name="fiatAmountVisible" format="boolean" />
        <attr name="enableChangeCurrency" format="boolean" />
    </declare-styleable>

</resources>
