<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="WalletTheme.Launcher" parent="WalletTheme">
        <item name="android:windowBackground">@drawable/bg_splash_screen</item>
    </style>

    <style name="WalletTheme" parent="WalletBase.v21" />

    <style name="WalletBase.v21" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/statusBarColor</item>
        <item name="android:navigationBarColor">@color/navigationBarColor</item>
        <item name="colorPrimary">@color/backgroundButtonPrimary</item>
        <item name="colorPrimaryDark">@color/backgroundPrimary</item>
        <item name="colorSecondary">@color/backgroundDisabled</item>
        <item name="colorControlHighlight">@color/backgroundDisabled</item>

        <item name="colorAccent">@color/textIconActive</item>
        <item name="colorControlActivated">@color/backgroundButtonPrimary</item>
        <item name="colorControlNormal">@color/textIconPrimary</item>
        <item name="alertDialogTheme">@style/WalletTheme.AlertDialog</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">?colorPrimary</item>
        <item name="android:windowAnimationStyle">@null</item>
        <!-- fix blue text for come Lollipop devices -->
        <!-- https://stackoverflow.com/questions/45196244/android-textcolor-ignored-in-androidtextappearance-of-the-edittext -->
        <item name="android:editTextColor">@color/textIconPrimary</item>
        <item name="android:textColor">@color/textIconPrimary</item>
        <item name="android:actionMenuTextColor">?colorSecondary</item>
    </style>
</resources>