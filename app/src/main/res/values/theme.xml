<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="WalletTheme.Launcher" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/lime</item>
        <item name="postSplashScreenTheme">@style/WalletTheme</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

    <style name="WalletTheme" parent="WalletBase.v21" />

    <style name="WalletBase.v21" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/night</item>
        <item name="colorPrimaryDark">@color/night_30</item>
        <item name="colorSecondary">@color/mountain</item>
        <item name="colorControlHighlight">@color/mountain</item>
        <item name="windowSplashScreenBackground">@color/lime</item>
        <item name="android:windowBackground">@color/bg_snow</item>

        <item name="colorAccent">@color/lime</item>
        <item name="colorControlActivated">@color/night</item>
        <item name="colorControlNormal">@color/night</item>
        <item name="alertDialogTheme">@style/WalletTheme.AlertDialog</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">?colorPrimary</item>
        <item name="android:windowAnimationStyle">@null</item>
        <!-- fix blue text for come Lollipop devices -->
        <!-- https://stackoverflow.com/questions/45196244/android-textcolor-ignored-in-androidtextappearance-of-the-edittext -->
        <item name="android:editTextColor">@color/text_night</item>
        <item name="android:textColor">@color/text_night</item>
        <item name="android:actionMenuTextColor">?colorSecondary</item>

        <item name="snackbarStyle">@style/UiKit.Native.Snackbar</item>
        <item name="snackbarButtonStyle">@style/UiKit.Native.SnackbarButton</item>

        <item name="materialAlertDialogTheme">@style/UiKit.MaterialAlertDialog</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="WalletTheme.BottomSheet.RoundedSnow" parent="WalletTheme.BottomSheet">
        <item name="bottomSheetStyle">@style/AppRoundCornersModalStyleSnow</item>
    </style>

    <style name="WalletTheme.BottomSheet.RoundedSmoke" parent="WalletTheme.BottomSheet">
        <item name="bottomSheetStyle">@style/AppRoundCornersModalStyleSmoke</item>
    </style>

    <style name="WalletTheme.BottomSheet" parent="Theme.Design.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="enableEdgeToEdge">true</item>
    </style>

    <style name="WalletTheme.CheckboxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:buttonTint">@color/night</item>
        <item name="android:textAppearance">@style/UiKit.TextAppearance.Regular.Text3</item>
    </style>
</resources>