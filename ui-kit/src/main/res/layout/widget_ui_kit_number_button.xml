<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_new_keyboard_selector"
    android:foreground="?selectableItemBackground"
    tools:parentTag="android.widget.FrameLayout">

    <TextView
        android:id="@+id/keyboardButtonTextView"
        android:layout_width="@dimen/ui_kit_number_keyboard_button_size"
        android:layout_height="@dimen/ui_kit_number_keyboard_button_size"
        android:layout_gravity="center"
        android:gravity="center"
        android:maxLines="1"
        android:textAppearance="@style/UiKit.TextAppearance.Regular.LargeTitle"
        android:textColor="@color/ui_kit_number_keyboard_button_color_selector"
        tools:text="1" />

    <ImageView
        android:id="@+id/keyboardButtonImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        tools:ignore="ContentDescription" />
</merge>
