<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxWidth="@dimen/ui_kit_max_keyboard_width"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:splitMotionEvents="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:splitMotionEvents="false"
        android:weightSum="3">

        <org.p2p.uikit.organisms.pin.UiKitNumberKeyboardButtonView
            android:id="@+id/onePinCodeButton"
            android:layout_width="@dimen/ui_kit_number_keyboard_button_size"
            android:layout_height="@dimen/ui_kit_number_keyboard_button_size"
            app:keyboard_button_text="1" />

        <org.p2p.uikit.organisms.pin.UiKitNumberKeyboardButtonView
            android:id="@+id/twoPinCodeButton"
            android:layout_width="@dimen/ui_kit_number_keyboard_button_size"
            android:layout_height="@dimen/ui_kit_number_keyboard_button_size"
            android:layout_marginStart="36dp"
            android:layout_marginEnd="36dp"
            app:keyboard_button_text="2" />

        <org.p2p.uikit.organisms.pin.UiKitNumberKeyboardButtonView
            android:id="@+id/threePinCodeButton"
            android:layout_width="@dimen/ui_kit_number_keyboard_button_size"
            android:layout_height="@dimen/ui_kit_number_keyboard_button_size"
            app:keyboard_button_text="3" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:splitMotionEvents="false"
        android:weightSum="3">

        <org.p2p.uikit.organisms.pin.UiKitNumberKeyboardButtonView
            android:id="@+id/fourPinCodeButton"
            android:layout_width="@dimen/ui_kit_number_keyboard_button_size"
            android:layout_height="@dimen/ui_kit_number_keyboard_button_size"
            app:keyboard_button_text="4" />

        <org.p2p.uikit.organisms.pin.UiKitNumberKeyboardButtonView
            android:id="@+id/fivePinCodeButton"
            android:layout_width="@dimen/ui_kit_number_keyboard_button_size"
            android:layout_height="@dimen/ui_kit_number_keyboard_button_size"
            android:layout_marginStart="36dp"
            android:layout_marginEnd="36dp"
            app:keyboard_button_text="5" />

        <org.p2p.uikit.organisms.pin.UiKitNumberKeyboardButtonView
            android:id="@+id/sixPinCodeButton"
            android:layout_width="@dimen/ui_kit_number_keyboard_button_size"
            android:layout_height="@dimen/ui_kit_number_keyboard_button_size"
            app:keyboard_button_text="6" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pin_code_third_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:splitMotionEvents="false"
        android:weightSum="3">

        <org.p2p.uikit.organisms.pin.UiKitNumberKeyboardButtonView
            android:id="@+id/sevenPinCodeButton"
            android:layout_width="@dimen/ui_kit_number_keyboard_button_size"
            android:layout_height="@dimen/ui_kit_number_keyboard_button_size"
            app:keyboard_button_text="7" />

        <org.p2p.uikit.organisms.pin.UiKitNumberKeyboardButtonView
            android:id="@+id/eightPinCodeButton"
            android:layout_width="@dimen/ui_kit_number_keyboard_button_size"
            android:layout_height="@dimen/ui_kit_number_keyboard_button_size"
            android:layout_marginStart="36dp"
            android:layout_marginEnd="36dp"
            app:keyboard_button_text="8" />

        <org.p2p.uikit.organisms.pin.UiKitNumberKeyboardButtonView
            android:id="@+id/ninePinCodeButton"
            android:layout_width="@dimen/ui_kit_number_keyboard_button_size"
            android:layout_height="@dimen/ui_kit_number_keyboard_button_size"
            app:keyboard_button_text="9" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:splitMotionEvents="false"
        android:weightSum="3">

        <org.p2p.uikit.organisms.pin.UiKitNumberKeyboardButtonView
            android:id="@+id/additionalLeftPinCodeButton"
            android:layout_width="@dimen/ui_kit_number_keyboard_button_size"
            android:layout_height="@dimen/ui_kit_number_keyboard_button_size"
            android:visibility="invisible"
            app:keyboard_button_image="@drawable/ic_new_fingerprint"
            app:keyboard_button_text=""
            tools:visibility="visible" />

        <org.p2p.uikit.organisms.pin.UiKitNumberKeyboardButtonView
            android:id="@+id/zeroPinCodeButton"
            android:layout_width="@dimen/ui_kit_number_keyboard_button_size"
            android:layout_height="@dimen/ui_kit_number_keyboard_button_size"
            android:layout_marginStart="36dp"
            android:layout_marginEnd="36dp"
            app:keyboard_button_text="0" />

        <org.p2p.uikit.organisms.pin.UiKitNumberKeyboardButtonView
            android:id="@+id/additionalRightPinCodeButton"
            android:layout_width="@dimen/ui_kit_number_keyboard_button_size"
            android:layout_height="@dimen/ui_kit_number_keyboard_button_size"
            app:keyboard_button_image="@drawable/ic_new_backspace"
            app:keyboard_button_text="" />

    </LinearLayout>

</LinearLayout>
