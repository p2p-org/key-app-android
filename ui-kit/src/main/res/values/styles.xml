<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="UiKit.Native.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="materialThemeOverlay">@style/ThemeOverlay.UiKit.Native.Snackbar</item>
        <item name="actionTextColorAlpha">0.5</item>
        <item name="titleTextAppearance">@style/UiKit.TextAppearance.Regular.Text3</item>
    </style>

    <style name="UiKit.Native.SnackbarButton" parent="Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textColor">@color/text_lime</item>
    </style>

    <style name="ThemeOverlay.UiKit.Native.Snackbar" parent="">
        <item name="colorOnSurface">@color/elements_night</item>
        <item name="colorPrimary">@color/text_lime</item>
    </style>

    <style name="UiKit.Organisms.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.UiKit.Organisms.BottomNavigationView</item>
        <item name="itemIconTint">@color/bottom_navigation_item_tint</item>
        <item name="itemTextColor">@color/bottom_navigation_item_tint</item>
        <item name="itemTextAppearanceInactive">@style/UiKit.TextAppearance.SemiBold.Label1</item>
        <item name="itemTextAppearanceActive">@style/UiKit.TextAppearance.SemiBold.Label1</item>
        <item name="android:background">@drawable/shape_bottom_navigation_background</item>
        <item name="itemRippleColor">@null</item>
    </style>

    <style name="ThemeOverlay.UiKit.Organisms.BottomNavigationView" parent="">
        <!-- Container background colour-->
        <item name="colorPrimary">@color/bg_snow</item>
    </style>

    <style name="UiKit.Native.Switch" parent="Widget.Material3.CompoundButton.Switch">
        <item name="trackTint">@color/selector_ui_kit_switch_track_color</item>
        <item name="thumbTint">@color/selector_ui_kit_switch_thumb_color</item>
    </style>

    <style name="UiKit.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/UiKit.MaterialAlertDialog.PositiveButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/UiKit.MaterialAlertDialog.NegativeButton</item>
    </style>

    <style name="UiKit.MaterialAlertDialog.NegativeButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/text_rose</item>
        <item name="android:textAppearance">@style/UiKit.TextAppearance.SemiBold.Label1</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="UiKit.MaterialAlertDialog.PositiveButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/text_sky</item>
        <item name="android:textAppearance">@style/UiKit.TextAppearance.SemiBold.Label1</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>