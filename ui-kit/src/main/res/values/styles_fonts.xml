<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance">
        <item name="android:textColor">@color/night</item>
    </style>

    <!--region TextAppearance.Regular-->
    <style name="TextAppearance.Regular">
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Regular.Caption2" parent="TextAppearance.Regular">
        <item name="android:textSize">11sp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="TextAppearance.Regular.Footnote" parent="TextAppearance.Regular">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextAppearance.Regular.Caption1" parent="TextAppearance.Regular">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.Regular.Subheadline" parent="TextAppearance.Regular">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextAppearance.Regular.Callout" parent="TextAppearance.Regular">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Regular.Text" parent="TextAppearance.Regular">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="TextAppearance.Regular.Title3" parent="TextAppearance.Regular">
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="TextAppearance.Regular.Title2" parent="TextAppearance.Regular">
        <item name="android:textSize">22sp</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="TextAppearance.Regular.Title1" parent="TextAppearance.Regular">
        <item name="android:textSize">28sp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="TextAppearance.Regular.LargeTitle" parent="TextAppearance.Regular">
        <item name="android:textSize">34sp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
    <!--endregion-->

    <!--region TextAppearance.SemiBold-->
    <style name="TextAppearance.SemiBold">
        <item name="fontFamily">@font/inter_semi_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.SemiBold.Caption2" parent="TextAppearance.SemiBold">
        <item name="android:textSize">11sp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="TextAppearance.SemiBold.Caption1" parent="TextAppearance.SemiBold">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.SemiBold.Footnote" parent="TextAppearance.SemiBold">
        <item name="android:textSize">13sp</item>
    </style>


    <style name="TextAppearance.SemiBold.Subheadline" parent="TextAppearance.SemiBold">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextAppearance.SemiBold.Callout" parent="TextAppearance.SemiBold">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.SemiBold.Text" parent="TextAppearance.SemiBold">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="TextAppearance.SemiBold.Title3" parent="TextAppearance.SemiBold">
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="TextAppearance.SemiBold.Title2" parent="TextAppearance.SemiBold">
        <item name="android:textSize">22sp</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="TextAppearance.SemiBold.Title1" parent="TextAppearance.SemiBold">
        <item name="android:textSize">28sp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <style name="TextAppearance.SemiBold.LargeTitle" parent="TextAppearance.SemiBold">
        <item name="android:textSize">34sp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
    <!--endregion-->

</resources>