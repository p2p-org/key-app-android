<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance">
        <item name="android:textColor">@color/night</item>
    </style>

    <!--region TextAppearance.Regular-->
    <style name="TextAppearance.Regular">
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Regular.Caption2">
        <item name="android:textSize">11sp</item>
        <item name="android:letterSpacing">0.066</item>
    </style>

    <style name="TextAppearance.Regular.Caption1">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.Regular.Subheadline">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextAppearance.Regular.Callout">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Regular.Text">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="TextAppearance.Regular.Title3">
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.38</item>
    </style>

    <style name="TextAppearance.Regular.Title2">
        <item name="android:textSize">22sp</item>
        <item name="android:letterSpacing">0.35</item>
    </style>

    <style name="TextAppearance.Regular.Title1">
        <item name="android:textSize">28sp</item>
        <item name="android:letterSpacing">0.364</item>
    </style>

    <style name="TextAppearance.Regular.LargeTitle">
        <item name="android:textSize">34sp</item>
        <item name="android:letterSpacing">0.374</item>
    </style>
    <!--endregion-->

    <!--region TextAppearance.SemiBold-->
    <style name="TextAppearance.SemiBold">
        <item name="fontFamily">@font/inter_semi_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.SemiBold.Caption2">
        <item name="android:textSize">11sp</item>
        <item name="android:letterSpacing">0.066</item>
    </style>

    <style name="TextAppearance.SemiBold.Caption1">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.SemiBold.Subheadline">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextAppearance.SemiBold.Callout">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.SemiBold.Text">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="TextAppearance.SemiBold.Title3">
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.38</item>
    </style>

    <style name="TextAppearance.SemiBold.Title2">
        <item name="android:textSize">22sp</item>
        <item name="android:letterSpacing">0.35</item>
    </style>

    <style name="TextAppearance.SemiBold.Title1">
        <item name="android:textSize">28sp</item>
        <item name="android:letterSpacing">0.364</item>
    </style>

    <style name="TextAppearance.SemiBold.LargeTitle">
        <item name="android:textSize">34sp</item>
        <item name="android:letterSpacing">0.374</item>
    </style>
    <!--endregion-->

</resources>