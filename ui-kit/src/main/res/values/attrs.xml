<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Atoms -->
    <attr name="editable" format="boolean" />
    <attr name="labelText" format="string" />
    <attr name="hintText" format="string" />
    <attr name="isDropdown" format="boolean" />

    <declare-styleable name="UiKitStartAmountView">
        <attr name="icon" />
        <attr name="title" />
        <attr name="subtitleColor" format="color" />
        <attr name="subtitle" format="string" />
        <attr name="subSubtitle" format="string" />
        <attr name="android:textAppearance" />
    </declare-styleable>

    <declare-styleable name="UiKitEndAmountView">
        <attr name="icon" />
        <attr name="topValue" format="string" />
        <attr name="bottomValue" format="string" />
    </declare-styleable>

    <declare-styleable name="UiKitRoundedImageView">
        <attr name="cornerRadius" />
    </declare-styleable>

    <declare-styleable name="UiKitTransactionImageView">
        <attr name="statusIconSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="UiKitTransactionSwapImageView">
        <attr name="tokenIconSize" format="dimension" />
    </declare-styleable>

    <!--  Organisms  -->

    <declare-styleable name="UiKitButton">
        <attr name="android:layout_height" />
        <attr name="iconTint" />
    </declare-styleable>

    <attr name="sliderIcon" format="reference" />
    <attr name="sliderText" format="string" />
    <attr name="leftIcon" format="reference" />

    <declare-styleable name="UiKitSliderButton">
        <attr name="android:textColor" />
        <attr name="sliderIcon" />
        <attr name="sliderText" />
    </declare-styleable>

    <declare-styleable name="UiKitSliderSolidButton">
        <attr name="sliderIcon" />
        <attr name="sliderText" />
    </declare-styleable>

    <declare-styleable name="UiKitSectionHeader">
        <attr name="withIcon" format="boolean" />
        <attr name="sectionText" format="string" />
        <attr name="textIconTint" format="color" />
        <attr name="isCaps" format="boolean" />
    </declare-styleable>

    <declare-styleable name="UiKitSkeletonRectangle">
        <attr name="isRounded" format="boolean" />
    </declare-styleable>

    <declare-styleable name="UiKitFourDigitsLargeInput">
        <attr name="leftIcon" />
        <attr name="isChevronVisible" format="boolean" />
        <attr name="rightIcon" format="reference" />
    </declare-styleable>

    <declare-styleable name="UiKitNumberKeyboardButtonView">
        <attr name="keyboard_button_text" format="string" />
        <attr name="keyboard_button_image" format="integer" />
    </declare-styleable>

    <declare-styleable name="UiKitAmountEditText">
        <attr name="editable" />
        <attr name="labelText" />
        <attr name="hintText" />
        <attr name="hintTextColor" format="color" />
        <attr name="android:inputType" />
        <attr name="android:maxLength" />
        <attr name="android:imeOptions" />
        <attr name="android:digits" />
        <attr name="android:text" />
        <attr name="android:drawableEnd" />
        <attr name="android:textAppearance" />
        <attr name="android:layout_height" />
    </declare-styleable>

    <declare-styleable name="PhoneNumberInputView">
        <attr name="editable" />
        <attr name="labelText" />
        <attr name="hintText" />
        <attr name="android:inputType" />
        <attr name="android:maxLength" />
        <attr name="android:imeOptions" />
        <attr name="android:digits" format="string" />
        <attr name="android:enabled" />
        <attr name="android:text" />
        <attr name="android:hint" />
        <attr name="android:drawableEnd" />
        <attr name="android:textAppearance" />
        <attr name="android:backgroundTint" />
        <attr name="android:textSize" />
        <attr name="android:nextFocusDown" />
        <attr name="android:imeActionId" />
        <attr name="isDropdown" />
    </declare-styleable>

    <declare-styleable name="UiKitEditText">
        <attr name="editable" />
        <attr name="labelText" />
        <attr name="hintText" />
        <attr name="android:inputType" />
        <attr name="android:maxLength" />
        <attr name="android:imeOptions" />
        <attr name="android:digits" format="string" />
        <attr name="android:enabled" />
        <attr name="android:text" />
        <attr name="android:hint" />
        <attr name="android:drawableEnd" />
        <attr name="android:textAppearance" />
        <attr name="android:backgroundTint" />
        <attr name="android:textSize" />
        <attr name="android:nextFocusDown" />
        <attr name="android:imeActionId" />
        <attr name="isDropdown" />
    </declare-styleable>

    <declare-styleable name="NewUiKitEditText">
        <attr name="labelText" />

        <attr name="inputText" format="string" />
        <attr name="inputTextColor" format="color" />
        <attr name="inputHintText" format="string" />
        <attr name="inputEndDrawable" format="reference" />
        <attr name="inputTextAppearance" format="reference" />
        <attr name="inputBackgroundTint" format="color" />
        
        <attr name="tipText" format="string"/>
        <attr name="tipTextColor" format="color" />

        <attr name="android:nextFocusDown" />
        <attr name="android:inputType" />
        <attr name="android:imeOptions" />
        <attr name="android:digits" format="string" />
        <attr name="android:enabled" />
    </declare-styleable>

    <!--    can be extended if there is need -->
    <!--    you can add icon to title, background tint etc-->
    <declare-styleable name="UiKitInformerView">
        <attr name="leftIcon" />
        <attr name="leftIconTint" format="color" />
        <attr name="title" format="string" />
        <attr name="caption" format="string" />
        <attr name="infoLine" format="string" />
        <attr name="infoLineColor" format="color" />
        <attr name="infoLinePosition" format="enum">
            <enum name="bottom" value="0" />
            <enum name="captionLine" value="1" />
        </attr>
    </declare-styleable>


</resources>
