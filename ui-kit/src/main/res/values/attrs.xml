<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Atoms -->

    <declare-styleable name="UiKitLeftAmountView">
        <attr name="icon" />
        <attr name="title" />
        <attr name="subtitleColor" format="color" />
        <attr name="subtitle1" format="string" />
        <attr name="subtitle2" format="string" />
    </declare-styleable>

    <declare-styleable name="UiKitAmountView">
        <attr name="icon" />
        <attr name="usdAmount" format="string" />
        <attr name="tokenAmount" format="string" />
    </declare-styleable>

    <declare-styleable name="UiKitBadgeView">
        <attr name="hasStroke" format="boolean" />
        <attr name="android:textColor" />
        <attr name="shape" format="enum">
            <enum name="oval" value="0" />
            <enum name="rectangle" value="1" />
        </attr>
    </declare-styleable>

    <!--  Organisms  -->

    <declare-styleable name="UiKitButton">
        <attr name="android:layout_height" />
        <attr name="iconTint" />
    </declare-styleable>

    <declare-styleable name="UiKitSectionHeader">
        <attr name="withIcon" format="boolean" />
        <attr name="sectionText" format="string" />
        <attr name="textIconTint" format="color" />
        <attr name="isCaps" format="boolean" />
    </declare-styleable>

</resources>
